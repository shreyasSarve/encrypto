<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.RailFenceEncryption">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="Rail Fence Encryption Technique"
            android:textColor="@color/darkPrimary"
            android:textSize="35sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp_10"
            android:hint="Enter text here"
            app:boxBackgroundColor="#20D81B60"
            app:boxCornerRadiusTopEnd="@dimen/dp_10"
            app:boxCornerRadiusTopStart="@dimen/dp_10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRailFenceData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRailFenceData"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/text"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="50dp"
            android:background="@drawable/corners_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Encrypt Data"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>
</layout>
